{
  "manifest_version": 2,

  "name": "twib-amazon",
  "description": "Supports TWiB Media by redirecting www.amazon.com to twib.me/amazon",
  "version": "0.1",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://www.amazon.com/",
    "*://twib.me/amazon"
  ],
  "background": {
    "scripts": ["redirect.js"]
  },
  "icons": {
    "128": "icon_128.png"
   }
}